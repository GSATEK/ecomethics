<odoo>
    <data>
        <record id="email_template_edifact_invoice" model="mail.template">
            <field name="name">EDIFACT Invoice Template</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="subject">Factura EDIFACT {{ object.name }}</field>
            <field name="body_html" type="html">
                <p>Estimado/a <t t-out="object.partner_id.name"/>,</p>
                <p>Adjunto encontrará la factura <strong><t t-out="object.name"/></strong> en formato EDIFACT para su revisión.</p>
                <p>Atentamente,<br/>
                <t t-out="object.company_id.name"/></p>
            </field>
        </record>
    </data>
</odoo>